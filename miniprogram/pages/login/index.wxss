.login_page {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: space-around;
  height: 100%;
}

.login_page .logo {
  flex: 4;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.login_page .desc {
  font-size: 30rpx;
  font-style: italic;
  flex: 1;
  color: #c9c9c9;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login_page .login_button {
  flex: 6;
}

.login_page .login_button image {
  height: 44rpx;
  position: absolute;
  left: -32%;
  top: 22%;
}

.login_page .login_button text {
  display: inline-block;
}
