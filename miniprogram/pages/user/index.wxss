.user_page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user_page .profile_picture {
  flex: 1;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: warp;
  flex-direction: column;
  z-index: 1;
}

.user_page .profile_picture .avatar_image {
  z-index: 2;
  flex-basis: 100%;
  margin-bottom: 10rpx;
}

.user_page .profile_picture text {
  color: #fff;
  text-shadow: 2rpx 2rpx 6rpx #ccc;
}

.user_page .profile_picture::before {
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  filter: 10rpx;
  z-index: 2;
}

.user_page .content {
  flex: 3;
  background: var(--bgColor);
}
