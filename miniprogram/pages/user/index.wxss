.user_page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user_page .profile_picture {
  flex: 2;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: warp;
  flex-direction: column;
  overflow: hidden;
}

.user_page .profile_picture .user {
  z-index: 2;
  position: absolute;
  width: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: warp;
  flex-direction: column;
}

.user_page .profile_picture .user .avatar_image {
  width: 100%;
  flex-basis: 100%;
  margin-bottom: 10rpx;
  border-radius: 999rpx;
}

.user_page .profile_picture .user text {
  color: #fff;
  text-shadow: 2rpx 2rpx 6rpx #ccc;
}

.user_page .profile_picture .bg_color {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
}

.user_page .content {
  flex: 3;
  background: var(--bgColor);
  padding: 10rpx 20rpx;
}

.user_page .content > view {
  margin: 10rpx 0;
  border-radius: 10rpx;
  background: #fff;
}

.user_page .content .user_tools {
  display: flex;
  position: relative;
  top: -10%;
  margin-bottom: -7%;
}

.user_page .content .user_tools .items {
  flex-basis: 25%;
  padding: 5rpx 10rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user_page .content .user_tools .items :first-child {
  margin-bottom: 10rpx;
}

.user_page .content .user_tools .items .number {
  color: var(--themColor);
}

.user_page .content .user_tools .items text {
  flex-basis: 100%;
  flex-wrap: wrap;
}

.user_page .content .user_order {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.user_page .content .user_order .title {
  flex-basis: 100%;
  margin: 5rpx 10rpx;
  margin-bottom: 0;
  padding: 10rpx;
  border-bottom: 1px solid #c9c9c9;
}

.user_page .content .user_order .content {
  background: #fff;
  display: flex;
  padding: 0 10rpx;
  justify-content: space-between;
  border-radius: 999rpx;
}

.user_page .content .user_order .content .van-icon {
  color: var(--themColor);
}

.user_page .content .user_order .content .items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  padding: 10rpx;
  margin: 10rpx;
}

.user_page .content .user_order .content .items .desc {
  flex-basis: 100%;
  margin-top: 10rpx;
}

.user_page .content .user_address {
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.user_page .content .other_menu {
  display: flex;
  flex-wrap: wrap;
}

.user_page .content .other_menu > view {
  flex-basis: 25%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  padding: 10rpx 0;
  margin: 10rpx 0;
}

.user_page .content .other_menu > view .desc {
  flex-basis: 100%;
  margin-top: 10rpx;
}

.user_page .content .help,
.user_page .content .suggestion,
.user_page .content .config {
  padding: 10rpx 20rpx;
}
