.user_page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.user_page .profile_picture {
  flex: 2;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: warp;
  flex-direction: column;
  overflow: hidden;
}

.user_page .profile_picture .user {
  z-index: 2;
  position: absolute;
  width: 23%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: warp;
  flex-direction: column;
}

.user_page .profile_picture .user .avatar_image {
  width: 100%;
  flex-basis: 100%;
  margin-bottom: 10rpx;
  border-radius: 999rpx;
}

.user_page .profile_picture .user text {
  color: #fff;
  text-shadow: 2rpx 2rpx 6rpx #ccc;
}

.user_page .profile_picture .bg_color {
  width: 100%;
  height: 100%;
  filter: blur(10rpx);
}

.user_page .content {
  flex: 3;
  background: var(--bgColor);
  padding: 10rpx 20rpx;
}

.user_page .content > view {
  margin: 10rpx 0;
  border-radius: 10rpx;
  background: #fff;
}

.user_page .content .user_tools {
  display: flex;
  position: relative;
  top: -80rpx;
  margin-bottom: -82rpx;
}

.user_page .content .user_tools .items {
  flex-basis: 25%;
  padding: 5rpx 10rpx;
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user_page .content .user_tools .items :first-child {
  margin-bottom: 10rpx;
}

.user_page .content .user_tools .items .number {
  color: var(--themColor);
}

.user_page .content .user_tools .items text {
  flex-basis: 100%;
  flex-wrap: wrap;
}

.user_page .content .user_order {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 1%;
}

.user_page .content .user_order .title {
  flex-basis: 100%;
  margin: 5rpx 10rpx;
  margin-bottom: 0;
  padding: 10rpx;
  border-bottom: 1px solid #c9c9c9;
}

.user_page .content .user_order .content {
  background: #fff;
  display: flex;
  padding: 0;
  justify-content: space-between;
  border-radius: 999rpx;
}

.user_page .content .user_order .content .van-icon {
  color: var(--themColor);
  flex-basis: 100%;
  text-align: center;
}

.user_page .content .user_order .content .items {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 10rpx;
  margin: 10rpx;
}

.user_page .content .user_order .content .items .icon {
  text-align: center;
  flex-basis: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 137rpx;
}

.user_page .content .user_order .content .items .desc {
  text-align: center;
  flex-basis: 100%;
  margin-top: 10rpx;
}

.user_page .content .user_address {
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
}

.user_page .content .other_menu {
  display: flex;
  flex-wrap: wrap;
}

.user_page .content .other_menu > view {
  flex-basis: 25%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  padding: 10rpx 0;
  margin: 10rpx 0;
}

.user_page .content .other_menu > view .icon {
  text-align: center;
  flex-basis: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 126rpx;
}

.user_page .content .other_menu > view .desc {
  text-align: center;
  flex-basis: 100%;
  margin-top: 10rpx;
}

.user_page .content .other_menu :nth-child(1) .van-icon {
  color: red;
}

.user_page .content .other_menu :nth-child(1) .van-icon {
  color: var(--violet);
}

.user_page .content .other_menu :nth-child(2) .van-icon {
  color: var(--gold);
}

.user_page .content .other_menu :nth-child(3) .van-icon {
  color: var(--orangered);
}

.user_page .content .other_menu :nth-child(4) .van-icon {
  color: var(--lightskyblue);
}

.user_page .content .other_menu :nth-child(5) .van-icon {
  color: var(--lightcoral);
}

.user_page .content .other_menu :nth-child(6) .van-icon {
  color: var(--sandybrown);
}

.user_page .content .other_menu :nth-child(7) .van-icon {
  color: var(--lightgreen);
}

.user_page .content .other_menu :nth-child(8) .van-icon {
  color: var(--cornflowerblue);
}

.user_page .content .setting:not(:last-child) view {
  color: red;
}

.user_page .content .setting .help,
.user_page .content .setting .suggestion,
.user_page .content .setting .config {
  padding: 10rpx 20rpx;
}
